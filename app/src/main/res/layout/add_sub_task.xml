<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubTaskActivity">

    <EditText
        android:id="@+id/subtaskEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập nội dung công việc phụ"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="textMultiLine"
        android:maxLines="5"/>

    <ImageButton
        android:id="@+id/addFileOrImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/add_file_image"
        android:background="@android:color/transparent"
        android:layout_below="@id/subtaskEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_below="@id/addFileOrImageButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>